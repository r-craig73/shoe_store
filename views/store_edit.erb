<h2>Store Details</h2>
<h3><%= @store.name() %></h3>

<h3>Available shoes...</h3>
<h4><%= @shoes %></h4>
<br>
<ul>
  <% @store.shoes.each do |shoe| %>
  <li><a href="/shoes/<%= @store.id %>"><%= shoe.name() %></a>
  <% end %>
</ul>

<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Change store's name:</label>
  <input id="name" name="name" type="text">
  <button type="submit">Update Store</button>
</form>
  <br>
<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Store</button>
</form>

<hr>
<h4><a href="/">Return to the home page.</a></h4>
