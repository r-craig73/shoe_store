<h2><%= @store.name() %> store details...</h2>
<br>

<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Change store's name:</label>
  <input id="name" name="name" type="text">
  <button type="submit">Update Store</button>
</form>
  <br>
<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Store</button>
</form>
<hr>
<h3>Add a shoe brand to <%= @store.name() %>'s inventory.</h3>

<form action="/stores/<%= @store.id() %>" method="post">
  <label for="shoe_id">Select a Shoe</label>
  <select id="shoe_id" name="shoe_id" type='text'>
    <% @shoes.each() do |shoe| %>
      <option value="<%= shoe.id()%>"> <%= shoe.brand() %> </option>
    <% end %>
  </select>
  <button type="submit">Add shoe to Store</button>
</form>

<h3>Available shoes at <%= @store.name() %></h3>
<ul>
    <% @store.shoes.each do |shoe| %>
      <li><%= shoe.brand() %></li>
    <% end %>
  </ul>

<hr>
<h4><a href="/">Return to the home page.</a></h4>
