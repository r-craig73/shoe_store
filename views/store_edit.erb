<h2>Store Details</h2>
<h3><%= @store.name() %></h3>
<h4><%= @store.shoes() %></h4>

<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Change store's name:</label>
  <input id="name" name="name" type="text">
  <button type="submit">Update Store</button>
</form>
  <br>
<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Store</button>
</form>
<hr>

<h2>Add a shoe brand</h2>

<form action="/shoes" method="post">
  <input name="store_id" type="hidden" value="<%= @store.id() %>">
  <label for="brand">Shoe brand:</label>
  <input id="brand" name="brand" type="text">
  <br>
  <label for="price">Please enter shoe brand's cost to the nearest whole dollar.</label>
  <input id="price" name="price" class="form-control" aria-label="Amount (to the nearest dollar)">
  <br>
  <button type="submit">Add Shoe Brand</button>
</form>
<hr>

<hr>
